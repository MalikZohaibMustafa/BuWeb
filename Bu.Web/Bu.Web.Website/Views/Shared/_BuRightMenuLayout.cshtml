@{
    Layout = "_BuLayout";
}

@section Head
{
    @await RenderSectionAsync("Head", required: false)
}

@section Header
{
    @await RenderSectionAsync("Header", required: false)
}

<div bu-right-menu-layout-container class="row">
    <div bu-right-menu-layout-body class="side-menu col-md-9 col-xl-10">
        @RenderBody()
    </div>
    <div bu-right-menu-layout-menu class="side-menu col-md-3 col-xl-2">
        @await RenderSectionAsync("RightMenu", required: true)
    </div>
</div>

@section Scripts
{
    @await RenderSectionAsync("Scripts", required: false)
}