@model (ArticleDetail ArticleDetail, ArticleMedia ArticleMedia)
@{
    this.ViewData["Title"] = "Article Media";
    this.ViewData["Icon"] = "bi bi-collection";
}

<partial name="_ArticleDetailFields" model="@this.Model.ArticleDetail" />
<fieldset disabled class="mb-3">
    <partial name="_MediaFields" model="@this.Model.ArticleMedia" />
</fieldset>
<div class="mb-3 col text-center">
    @if (!this.Model.ArticleDetail.Published.IsPublished)
    {
        <a asp-action="Delete" asp-controller="Media" asp-area="Articles" asp-route-articleDetailId="@this.Model.ArticleMedia.ArticleDetailId" asp-route-articleMediaId="@this.Model.ArticleMedia.ArticleMediaId" class="btn btn-secondary">
            <i class="bi bi-trash"></i> Delete
        </a>
        <a asp-action="Edit" asp-controller="Media" asp-area="Articles" asp-route-articleDetailId="@this.Model.ArticleMedia.ArticleDetailId" asp-route-articleMediaId="@this.Model.ArticleMedia.ArticleMediaId" class="btn btn-secondary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    }
    <a asp-action="Display" asp-controller="Home" asp-area="Articles" asp-route-id="@this.Model.ArticleMedia.ArticleDetailId" class="btn btn-secondary">Cancel</a>
</div>