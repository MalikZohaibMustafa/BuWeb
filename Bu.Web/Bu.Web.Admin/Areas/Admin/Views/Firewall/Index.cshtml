@model Bu.Web.Admin.Areas.Admin.Models.Firewall.IndexInputModel
@{
    this.ViewData["Title"] = "Firewall";
    this.ViewData["Icon"] = "bi bi-lock";
}
<form asp-action="Post" asp-controller="Firewall" asp-area="Admin">
    <div class="row g-3">
        <div class="col-md">
            <label asp-for="IpAddresses" class="col-form-label"></label>
            <textarea asp-for="IpAddresses" class="form-control" rows="@(Model.IpAddresses.Split(Environment.NewLine).Length + 5)">@this.Model</textarea>
            <span asp-validation-for="IpAddresses"></span>
        </div>
    </div>
    <div class="mt-3 col text-center">
        <button type="submit" class="btn btn-primary" onclick="copyToClipboard(this)">Save</button>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Firewall" asp-area="Admin">Cancel</a>
    </div>
</form>