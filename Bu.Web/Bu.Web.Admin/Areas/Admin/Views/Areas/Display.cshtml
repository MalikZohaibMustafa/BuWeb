@model Area
@{
    this.ViewData["Title"] = "Area";
    this.ViewData["Icon"] = "bi bi-globe";
}

<fieldset disabled>
    <partial name="_AreaFields" model="@this.Model"/>
</fieldset>
<div class="mt-3 col text-center">
    @if (this.Model.ParentAreaId != null)
    {
        <a asp-action="Delete" asp-controller="Areas" asp-area="Admin" asp-route-id="@this.Model.AreaId" class="btn btn-secondary">
            <i class="bi bi-trash"></i> Delete
        </a>
        <a asp-action="Edit" asp-controller="Areas" asp-area="Admin" asp-route-id="@this.Model.AreaId" class="btn btn-secondary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    }
    <a asp-action="Index" asp-controller="Areas" asp-area="Admin" class="btn btn-secondary">Cancel</a>
</div>