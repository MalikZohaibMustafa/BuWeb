@model ArticleDetail
@{
    this.ViewData["Title"] = "New Article";
    this.ViewData["Icon"] = "bi bi-journal";
}

<form method="post" asp-area="Articles" asp-controller="Home" asp-action="Add">
    <fieldset>
        <partial name="_ArticleDetailFields" model="@this.Model"/>
    </fieldset>
    <div class="mt-3 col text-center">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Home" asp-area="Articles" class="btn btn-secondary">Cancel</a>
    </div>
</form>