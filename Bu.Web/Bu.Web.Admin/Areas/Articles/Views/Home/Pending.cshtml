@model ArticleDetail
@{
    this.ViewData["Title"] = "Reject Article";
    this.ViewData["Icon"] = "bi bi-journal";
}

<fieldset disabled>
    <partial name="_ArticleDetailFields" model="@this.Model" />
</fieldset>
<div class="mt-3 col text-center">
    <form method="post" asp-area="Articles" asp-controller="Home" asp-action="PendingPost">
        <button type="submit" class="btn btn-danger">Pending</button>
        <a asp-action="Display" asp-controller="Home" asp-area="Articles" asp-route-id="@this.Model.ArticleDetailId" class="btn btn-secondary">Cancel</a>
    </form>
</div>